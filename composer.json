{
  "name": "beapi/bea-plugin-boilerplate",
  "description": "Plugin boilerplate from BeAPI.",
  "license": "GPL-2.0+",
  "type": "project",
  "keywords": ["WordPress", "boilerplate", "CMS"],
  "authors": [
    {
      "name": "BeAPI",
      "email": "technique@beapi.fr",
      "homepage": "https://beapi.fr",
      "role": "Company"
    }
  ],
  "config": {
    "optimize-autoloader": true,
    "preferred-install": { "*": "dist" },
    "sort-packages": true,
    "allow-plugins": {
      "phpro/grumphp-shim": true,
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "require-dev": {
    "dealerdirect/phpcodesniffer-composer-installer": "v1.2.0",
    "overtrue/phplint": "9.7.1",
    "php-parallel-lint/php-parallel-lint": "v1.4.0",
    "phpcompatibility/php-compatibility": "9.3.5",
    "phpro/grumphp-shim": "v2.18.0",
    "squizlabs/php_codesniffer": "3.13.5",
    "vimeo/psalm": "6.14.2",
    "wp-coding-standards/wpcs": "3.3.0"
  },
  "scripts": {
    "cs": "./vendor/bin/phpcs",
    "cb": "./vendor/bin/phpcbf",
    "psalm": "./vendor/bin/psalm"
  },
  "suggest": {
    "wp-cli/wp-cli": "*@stable"
  }
}
